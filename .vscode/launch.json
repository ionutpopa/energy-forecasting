{
    "version": "1.0.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Forecasting Ion A.I.",
            "runtimeArgs": [ "-r", "ts-node/register" ],
            "args": [
                "${workspaceFolder}/src/index.ts",
                // "debug",
                // "drop-all",
                // "parse-all-data",
                "predict-mode",
                "train-mode",
                "consumption-per-capita",
                // "consumption",
                // "generation",
                // "weather",
                // "gdp-growth",
                // "population-growth",
                // "co2-emissions"
            ],
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "env": {
                "MAX_RETRIES": "10",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Forecasting Ion A.I. Server",
            "runtimeArgs": [ "-r", "ts-node/register" ],
            "args": [
                "${workspaceFolder}/src/server.ts",
            ],
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "env": {
                "PORT": "8181",
            }
        }
    ]
}