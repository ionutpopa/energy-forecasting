{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeArgs": [ "-r", "ts-node/register" ],
            "args": [
                "${workspaceFolder}/src/index.ts",
                "debug"
            ],
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "sourceMaps": true,
            "env": {
                "MAX_RETRIES": "10"
            }
        }
    ]
}